%h2 Projects
%div#left_column
  = link_to 'New Project', new_project_path if admin?
  %ul#project_list
    = render @projects
%div#right_column
  %h3 Categories
  %ul#category_menu
    %li= link_to 'All Categories', categories_path, 'data-category' => 'all', :class => 'category_active'
    - @categories.each do |category|
      %li= link_to category.name, category_path(category), 'data-category' => normalize_name(category)
