%h2= @category.name
- if admin?
  = link_to edit_category_path(@category), :class => 'btn' do
    %i.icon-pencil
    Edit
  = link_to category_path(@category), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-danger' do
    %i.icon-trash.icon-white
    Delete
  %hr.soften
%ul.thumbnails.span8
  = render @projects
