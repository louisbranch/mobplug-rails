%h2 Contact
.row
  = error_messages_for(@contact)
  =form_for @contact, :url => contact_path, :html => { :class => "form-horizontal"}  do |f|
    %div.control-group
      =f.label :name, :class => 'control-label'
      %div.controls
        =f.text_field :name, :class => 'input-xlarge', :autofocus => true
    %div.control-group
      =f.label :email, :class => 'control-label'
      %div.controls
        =f.email_field :email, :class => 'input-xlarge'
    %div.control-group
      =f.label :subject, :class => 'control-label'
      %div.controls
        =f.text_field :subject, :class => 'input-xlarge'
    %div.control-group
      =f.label :message, :class => 'control-label'
      %div.controls
        =f.text_area :message, :class => 'input-xlarge', :rows => '6'
    %div.form-actions
      =f.submit 'Send', :class => 'btn btn-primary'
